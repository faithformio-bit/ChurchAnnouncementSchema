{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "announcement_title": {
      "type": "string"
    },
    "announcement_overview": {
      "type": "string"
    },
    "announcement_bullets": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "announcement_full_text": {
      "type": "string"
    },
    "totals": {
      "type": "object",
      "properties": {
        "total_events": {
          "type": "integer"
        },
        "total_series": {
          "type": "integer"
        },
        "total_attendees": {
          "type": "integer"
        }
      },
      "required": [
        "total_events",
        "total_series",
        "total_attendees"
      ],
      "additionalProperties": false
    },
    "events_extracted": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "summary": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "start_iso": {
            "type": "string"
          },
          "end_iso": {
            "type": "string"
          },
          "time_zone": {
            "type": "string"
          },
          "attendee_count": {
            "type": "integer"
          },
          "recurring_event_id": {
            "type": "string"
          },
          "html_link": {
            "type": "string"
          }
        },
        "required": [
          "summary",
          "description",
          "location",
          "start_iso",
          "end_iso",
          "time_zone",
          "attendee_count",
          "recurring_event_id",
          "html_link"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "announcement_title",
    "announcement_overview",
    "announcement_bullets",
    "announcement_full_text",
    "totals",
    "events_extracted"
  ],
  "additionalProperties": false
}

